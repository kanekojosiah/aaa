class car:
    def __init__(self, brand, model, year):
        self.brand = brand
        self.model = model
        self.year = year

    def start_engine(self):
        return f"The engine of the {self.brand} {self.model} is starting."

def drive(car):
    return f"The {car.brand} {car.model} is now driving."

def stop(car):
    return f"The {car.brand} {car.model} has stopped."

my_car = car("Toyota", "Corolla", 2020)
print(my_car.start_engine())
print(drive(my_car))
print(stop(my_car))
